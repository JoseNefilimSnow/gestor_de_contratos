<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="507dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/listaContratos"
            android:scrollbars="vertical" android:visibility="visible"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/addContrato"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp" android:layout_marginRight="6dp"
            android:background="@drawable/ic_add_black"/>
</android.support.constraint.ConstraintLayout>