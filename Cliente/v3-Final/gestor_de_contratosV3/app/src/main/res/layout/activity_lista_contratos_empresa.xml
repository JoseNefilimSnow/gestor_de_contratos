<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <TextView
            android:id="@+id/nombreEmpresaDetailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text="Nombre Empresa"
            android:textSize="24sp"
            android:textStyle="bold|italic"
    />
    <TextView
            android:id="@+id/direccionEmpresaDetailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text="Dir. Empresa"
            android:textSize="18sp"
    />
    <TextView
            android:id="@+id/telefonoEmpresaDetailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text="Telefono Empresa"
            android:textSize="18sp"
    />
    <TextView
            android:id="@+id/correoEmpresaDetailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text="Correo Empresa"
            android:textSize="18sp"
    />

    <TextView
            android:id="@+id/contratosporEmpresaDetailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="Contratos:"
            android:textSize="24sp"
            android:textStyle="bold"
    />
    <!-- Muestra los datos de SQLITE-->
    <ListView
            android:id="@+id/contratosLv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="1dp"
    />

</LinearLayout>